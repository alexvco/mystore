<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Send a new message</h3>
    </div>
    <div id="new_contact" class="panel-body" data-hook="">
<%= form_for @contact, :url => {:action => "create"} do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone %><br>
    <%= f.telephone_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :message %><br>
    <%= f.text_area :message, class: "form-control", rows: "8", style: "resize:vertical;" %>
  </div>

  <div class="actions">
    <%= f.submit "Send Message", class: "btn btn-lg btn-success btn-block" %>
  </div>
<% end %>

  </div>
  </div>
</div>